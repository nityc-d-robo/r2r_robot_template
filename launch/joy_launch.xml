<?xml version='1.0' ?>
<launch>
    <node pkg="joy" exec="joy_node" name="joy_node">
        <param name="device_id" value="0"/>

        <param name="deadzone" value="0.05"/>

        <param name="autorepeat_rate" value="20.0"/>

        <param name="sticky_buttons" value="false"/>
        
        <param name="coalesce_interval_ms" value="1"/>
    </node>

    <node pkg="teleop_twist_joy" exec="teleop_node" name="teleop_twist_joy_node">
        <remap from="cmd_vel" to="cmd_vel"/>

        <param name="require_enable_button" value="true"/>
        
        <param name="enable_button" value="4"/> 
        
        <param name="enable_turbo_button" value="-1"/>

        <param name="axis_linear.x" value="1"/>
        <param name="axis_linear.y" value="0"/>
        <param name="axis_angular.yaw" value="3"/>

        <param name="scale_linear.x" value="0.5"/>
        <param name="scale_linear.y" value="0.5"/>
        <param name="scale_angular.yaw" value="1.0"/>

        <param name="scale_linear_turbo.x" value="1.0"/>
        <param name="scale_linear_turbo.y" value="1.0"/>
        <param name="scale_angular_turbo.yaw" value="2.0"/>

        <param name="inverted_reverse" value="false"/>

    </node>
</launch>